---
import Layout from '../../layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import Image from '../../components/common/Image.astro';
import Headline from '../../components/blog/Headline.astro';

import { getData } from '../../../server/database';

const data = await getData();

function getDate() {
  const actualDate = new Date();
  const day = actualDate.getDate();
  const month = actualDate.getMonth() + 1; 
  const year = actualDate.getFullYear();
  const formatDate = `${day}/${month}/${year}`;

  return formatDate;
}

const today = getDate();

---

<Layout>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline
      subtitle="DescripciÃ³n del blog"
    >
      Blog
    </Headline>
    <ul>
      <li class="mb-12 md:mb-20">
        {
          data.map((item) => (
            <article class={`max-w-md mx-auto md:max-w-none pb-10 ${item.image ? 'md:grid-cols-2' : ''}`}>
                {item.image && (
                  <a class="relative block group" href={`/posts/${item._id}` ?? 'javascript:void(0)'}>
                    <div class="relative h-0 pb-[56.25%] md:pb-[75%] md:h-72 lg:pb-[56.25%] overflow-hidden bg-gray-400 dark:bg-slate-700 rounded shadow-lg">
                      {item.image && (
                        <Image
                          src={item.image}
                          class="absolute inset-0 object-cover w-full h-full mb-6 rounded shadow-lg bg-gray-400 dark:bg-slate-700"
                          widths={[400, 900]}
                          width={1200}
                          sizes="(max-width: 900px) 400px, 900px"
                          alt="alt"
                          aspectRatio="16:9"
                          loading="lazy"
                          decoding="async"
                        />
                      )}
                    </div>
                  </a>
                )}
                <div class="mt-2">
                  <header>
                    <div class="mb-1">
                      <span class="text-sm">
                        <Icon name="tabler:clock" class="w-3.5 h-3.5 inline-block -mt-0.5 dark:text-gray-400" />
                        <time datetime={String(today)} class="inline-block">{getDate()}</time>
                      </span>
                    </div>

                    <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
                        <a
                          class="hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200"
                          href={`/posts/${item._id}`}
                        >
                          {item.title}
                        </a>
                    </h2>
                    <p class="flex-grow text-muted dark:text-slate-400 text-lg">{item.description}</p>
                  </header>
                  <footer class="mt-5" />
                </div>
            </article>
          ))
        }
      </li>
    </ul>
  </section>
</Layout>
